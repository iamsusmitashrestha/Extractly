{
  "manifest_version": 3,
  "name": "Extractly - Natural Language Web Data Extraction",
  "version": "1.0.0",
  "description": "Extract structured data from web pages using natural language instructions",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://localhost:3000/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Extractly - Extract Data"
    
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["popup/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
